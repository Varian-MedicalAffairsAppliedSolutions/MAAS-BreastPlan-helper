<UserControl x:Class="MAAS_BreastPlan_helper.Views.FluenceExtensionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10" Background="White">
            <!-- PTV Structure Selection -->
            <GroupBox Header="PTV Structure" Margin="5">
                <StackPanel Margin="5">
                    <TextBlock Text="Select the PTV structure:" FontWeight="Bold" Margin="0,0,0,5" />
                    <ComboBox ItemsSource="{Binding Structures}" 
                          SelectedItem="{Binding SelectedPTVStructure}" 
                          DisplayMemberPath="Id"
                          Margin="0,0,0,10" />
                </StackPanel>
            </GroupBox>

            <!-- Fluence Parameters -->
            <GroupBox Header="Fluence Parameters" Margin="5">
                <StackPanel Margin="5">
                    <!-- Extent -->
                    <TextBlock Text="Select the extent of the fluence (cm):" FontWeight="Bold" Margin="0,0,0,5" />
                    <TextBox Text="{Binding FluenceExtent, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10" />

                    <!-- Depth -->
                    <TextBlock Text="Enter the depth of the fluence (cm):" FontWeight="Bold" Margin="0,0,0,5" />
                    <ComboBox ItemsSource="{Binding FluenceDepthOptions}" 
                          SelectedItem="{Binding SelectedFluenceDepth}"
                          Margin="0,0,0,10" />
                </StackPanel>
            </GroupBox>

            <!-- Beam Selection -->
            <GroupBox Header="Beam Selection" Margin="5">
                <StackPanel Margin="5">
                    <TextBlock Text="Select the beams:" FontWeight="Bold" Margin="0,0,0,5" />
                    <ListBox ItemsSource="{Binding BeamSelectionItems}" 
                         SelectionMode="Multiple"
                         MaxHeight="200"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding BeamId}" 
                                      IsChecked="{Binding IsSelected}"
                                      Margin="2" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </GroupBox>

            <!-- Status and Confirm -->
            <StackPanel Margin="5">
                <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Margin="0,5" />

                <Button Content="Confirm" 
                    Command="{Binding ConfirmSelectionCommand}" 
                    Height="40" 
                    Margin="0,10,0,5"
                    Background="#007ACC" 
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>